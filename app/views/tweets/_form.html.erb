<div class="col-md-6 col-md-offset-3">
	<%= form_for :tweet, url: tweets_path, method: :post, html: { id: "new_tweet" } do |f| %>
		<div class="form-group">
			<%= f.text_area :message, placeholder: "Enter post", autofocus: true, class: "form-control" %>
		</div>
		<hr>
		<%= f.submit "Tweet!", class: "btn btn-primary btn-block" %>
	<% end %>
</div>
