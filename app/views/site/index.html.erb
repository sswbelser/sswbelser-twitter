<div class="text-center">
    <h1>My Twitter Feed</h1>
</div>
<% if current_user %>
	<div class="row">
		<div class="col-md-4 col-md-offset-4"><hr>
			<%= link_to 'New Tweet', new_tweet_path, class: "btn btn-primary btn-block" %>
		</div>
	</div>
	<hr>
	<% current_user.home_timeline.each do |t| %>
		<div class="col-md-6">
			<div class="panel panel-success">
				<div class="panel-heading">
					<ul class="tweet_heading">
						<li>At <%= t.created_at %></li>
						<li><%= t.user.screen_name %></li>
					</ul>
				</div>
				<div class="panel-body">
					<p><%= t.text %></p>
				</div>
			</div>
		</div>
	<% end %>
<% else %>
	<div class="text-center">
		<h4>Please <%= link_to "log in to Twitter", "/auth/twitter" %> to view your feed</h4>
	</div>
<% end %>