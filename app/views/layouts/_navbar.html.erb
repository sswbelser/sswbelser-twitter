<header>
	<nav class="navbar navbar-inverse">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">Mini-Twitter</a>
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<ul class="nav navbar-nav">
				<li><a href="//www.sswbelser.com" target="_blank">Made by SSWBelser</a></li>
				<li><a href="//github.com/sswbelser/sswbelser-twitter" target="_blank"><i class="fa fa-github-square"></i></a></li>
			</ul>
			<% if current_user %>
			<!-- renders if user is logged in -->
				<a class="btn navbar-btn navbar-right btn-danger" href="/logout" id="logout_button">Log out</a>
				<p class="navbar-text navbar-right">Welcome, <%= current_user.name %></p>
			<% else %>
			<!-- renders if user isn't logged in -->
				<a class="btn navbar-btn navbar-right btn-default" href="/auth/twitter" id="login_button">Log in to Twitter</a>
			<% end %>
		</div>
	</nav>
</header>